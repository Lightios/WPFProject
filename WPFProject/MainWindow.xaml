            <Button Content="Wczytaj" Click="Load" FontSize="18" FontWeight="Bold" Margin="5,5,5,5" Padding="1,4,1,4"/>
            <Button Content="Drukuj" Click="Print" FontSize="18" FontWeight="Bold" Margin="5,5,5,5" Padding="1,4,1,4"/>
        </StackPanel>

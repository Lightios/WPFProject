        xmlns:local="clr-namespace:WPFProject"
        xmlns:controls="clr-namespace:WPFProject.Controls"
        mc:Ignorable="d"
        Title="Generator tabliczek" Height="450" Width="800"
        Icon = "Resources/logo.png">
